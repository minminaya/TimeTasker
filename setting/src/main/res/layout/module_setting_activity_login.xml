<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_blue_5d6dbd">

    <android.support.v7.widget.CardView
        android:layout_width="35dp"
        android:layout_height="525dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="@color/base_little_blue_c3c8e0"
        app:cardElevation="2dp">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="313dp"
        android:layout_height="583dp"
        android:layout_centerVertical="true"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ids_img_icon"
                android:layout_width="92dp"
                android:layout_height="113dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/module_setting_login_im_default" />

            <EditText
                android:id="@+id/ids_et_email"
                style="@style/Module_Setting_Login_EditText"
                android:layout_below="@id/ids_img_icon"
                android:layout_marginTop="30dp"
                android:hint="Input You Email" />

            <EditText
                android:id="@+id/ids_et_password"
                style="@style/Module_Setting_Login_EditText"
                android:layout_below="@id/ids_et_email"
                android:layout_marginTop="11dp"
                android:hint="Input You Password" />

            <Button
                android:id="@+id/ids_btn_login"
                android:layout_width="256dp"
                android:layout_height="45dp"
                android:layout_below="@id/ids_et_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:background="@drawable/module_setting_btn_login_bg"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="157dp"
                android:layout_height="12dp"
                android:layout_below="@+id/ids_btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp">

                <View
                    android:layout_width="47dp"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/base_black_4e4e4e" />

                <TextView
                    android:layout_width="38dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:gravity="bottom|center"
                    android:text="or With"
                    android:textColor="@color/base_black_4e4e4e"
                    android:textSize="11dp" />

                <View
                    android:layout_width="47dp"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/base_black_4e4e4e" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="247dp"
                android:layout_height="41dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="81dp">

                <Button
                    android:layout_width="116dp"
                    android:layout_height="41dp"
                    android:text="FaceBook" />

                <Button
                    android:layout_width="116dp"
                    android:layout_height="41dp"
                    android:layout_alignParentEnd="true"
                    android:text="FaceBook" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp">

                <TextView
                    android:id="@+id/ids_tv_hint"
                    android:layout_width="121dp"
                    android:layout_height="12dp"
                    android:gravity="end"
                    android:text="Don't have an account?"
                    android:textColor="@color/base_black_4e4e4e"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:gravity="start"
                    android:text="REGISTER"
                    android:textColor="@color/base_black_4e4e4e"
                    android:textSize="11dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
